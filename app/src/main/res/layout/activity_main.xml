<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mainTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="275dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/alarmTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Будильник" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/worldTimeTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мировое время" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/stopWatchTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Секундомер" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/timerTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Таймер" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/currentTab"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:translationY="150dp"
        app:layout_constraintBottom_toTopOf="@+id/mainTabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/alarmsScroll"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarmsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Все будильники\nотключены"
        android:textAlignment="center"
        android:textSize="30sp"
        android:translationY="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/alarmsScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/alarmsBtns"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:translationY="125dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/alarmsScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmsTitle">

        <LinearLayout
            android:id="@+id/mockAlarmsContainer"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/addAlarmBtn"
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:backgroundTint="#00F80000"
            android:shadowColor="#00FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/alarmContextMenuBtn"
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:backgroundTint="#00F80000"
            android:shadowColor="#00FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="⫶"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/alarmsScroll"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:translationY="200dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tabsLabels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/alarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/tabsLabels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="275dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alarmTabLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="alarm"
            android:outlineProvider="none"
            android:singleLine="true"
            android:text="Будильник"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/worldTabLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="world"
            android:text="Мировое время"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/stopwatchTabLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="stopwatch"
            android:text="Секундомер"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/timerTabLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="timer"
            android:text="Таймер"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>