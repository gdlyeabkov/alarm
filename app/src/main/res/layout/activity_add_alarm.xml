<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Имя сигнала"
        app:layout_constraintBottom_toTopOf="@+id/addAlarmFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/alarmPause"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/addAlarmFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

        <LinearLayout
            android:id="@+id/alarmPauseRow"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarmPauseHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пауза"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alarmPauseContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 минут, 3 раза"
                android:textColor="#0000FF" />
        </LinearLayout>

        <Switch
            android:id="@+id/alarmPauseSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/soundAlarm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/vibrationAlarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="0.768">

        <LinearLayout
            android:id="@+id/soundAlarmRow"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/soundAlarmHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Звук будильника"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/soundAlarmContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home coming"
                android:textColor="#0000FF" />
        </LinearLayout>

        <Switch
            android:id="@+id/soundAlarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vibrationAlarm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/alarmPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/vibrationAlarmRow"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vibrationAlarmHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вибрация"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vibrationAlarmContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic call"
                android:textColor="#0000FF" />
        </LinearLayout>

        <Switch
            android:id="@+id/vibrationAlarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addAlarmFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:text="Отмена"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:text="Продолжить"
            android:textColor="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>